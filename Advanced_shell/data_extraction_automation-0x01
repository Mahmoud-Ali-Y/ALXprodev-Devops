#!/bin/bash

# Extract data from JSON using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')   # Capitalize first letter
formatted_height=$(jq '.height' data.json | awk '{printf "%.1f", $1/10}')  # dm → m
formatted_weight=$(jq '.weight' data.json | awk '{printf "%.1f", $1/10}')  # hg → kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize first letter

# Print formatted output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."