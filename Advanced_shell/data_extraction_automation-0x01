#!/bin/bash

# Extract data from JSON using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')   # Capitalize first letter
height=$(jq '.height' data.json | awk '{print $1/10}') # Convert decimeters → meters
weight=$(jq '.weight' data.json | awk '{print $1/10}') # Convert hectograms → kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize first letter

# Print formatted output
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."