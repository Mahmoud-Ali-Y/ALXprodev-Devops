#!/bin/bash

# Directory containing Pokémon JSON files
INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop over JSON files and extract data
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq '.height' "$file" | awk '{printf "%.1f", $1/10}') # dm → m
    weight=$(jq '.weight' "$file" | awk '{printf "%.1f", $1/10}') # hg → kg
    echo "$name,$height,$weight" >> "$OUTPUT_FILE"
done

# Display report location
echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Print CSV content
cat "$OUTPUT_FILE"
echo

# Calculate averages with awk
awk -F',' 'NR>1 {total_height+=$2; total_weight+=$3; count++}
END {
    printf "\nAverage Height: %.2f m\n", total_height/count
    printf "Average Weight: %.2f kg\n", total_weight/count
}' "$OUTPUT_FILE"